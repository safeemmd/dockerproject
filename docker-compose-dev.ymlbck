version: '3'
services:
  mysql:
    build: .
    hostname: mysql_aptos
    restart: always
    environment:
      MYSQL_DATABASE: auth
      MYSQL_USER: root
      MYSQL_ROOT_PASSWORD: password
    ports:
      - "3307:3307"
    expose:
      - 3307
  dev-front:
    build: frontend/web/.
    ports:
      - "8081:8081"
    tty: true
  dev-auth:
    build: authservice/auth-app/.
    ports:
      - "8088:8088"
    tty: true
    links:
      - mysql
    depends_on:
      - mysql
